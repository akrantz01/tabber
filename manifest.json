{
  "manifest_version": 2,
  "name": "Tabber",
  "version": "1.0",
  "description": "Save and load tabs to files",
  "homepage_url": "https://github.com/akrantz01/tabber",
  "permissions": [
    "menus",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Tabber",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  }
}
