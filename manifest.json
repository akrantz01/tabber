{
  "manifest_version": 2,
  "name": "Tabber",
  "version": "1.1",
  "description": "Save and load tabs to files",
  "homepage_url": "https://github.com/akrantz01/tabber",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Tabber",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  }
}
